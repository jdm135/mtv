<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="dashboard landing">
    <div class="parent">

        <!-- Top Nav -->
        <% include ../partials/header %>

            <!-- Full Width Banner -->
            <div class="main-media">
                <h1>DASHBOARD</h1>
            </div>

            <!-- Container -->
            <div class="content container">
                <div class="info-container clearfix">
                    <h2 class="text-center">Welcome <%= currentUser.firstName %>, here are the latest updates.</h2>
                    <div class="filters dashboard-filters clearfix">
                        <div class="filter active" data-val="all">All</div>
                        <div class="filter" data-val="following">Following</div>
                        <div class="filter" data-val="revivals">Revivals</div>
                        <div class="filter" data-val="launches">Launches</div>
                        <div class="filter" data-val="messages">Messages</div>
                    </div>
                    <div class="dashboard-content">
                        <!-- <div class="empty-content text-center">
                            <h3>You are currently not following any campaigns.<br>Please start a campaign or follow one to receive updates to your dashboard.</h3>
                        </div> -->
                        <div class="slider clearfix">




                        </div>
                    </div>

                    <div class="pagination">
                        <a class="link active">1</a>
                        <a class="link">2</a>
                        <a class="link">3</a>
                        <a class="next">Last</a>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <% include ../partials/footer %>
    </div>
</body>

<script type="text/javascript" charset="utf-8">
  $(function(){
    // tabs
    $('.slider .options .option').bind('click', function(){
      var val = $(this).attr('data-attr');
      $('.slider .slides').removeClass('active');

      $('.slider .slides.' + val).addClass('active');
    });

    // logged in user
    $('.topnav .user').bind('click', function(){
      $(this).toggleClass('active');
      $('.topnav .user .dropdown').slideToggle(350);
    });
  });
</script>


</html>
