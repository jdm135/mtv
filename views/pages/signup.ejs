<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="signup campaign landing">
    <div class="parent">

        <!-- Top Nav -->
        <% include ../partials/header %>

            <!-- Container -->
            <div class="content container">
                <div class="info-container clearfix">
                    <div class="steps-container">
                        <div class="step step-one active">
                            <h2>SIGN UP</h2>
                            <a href="/pages/dashboard" class="fb-link btn"><img src="/images/fb_white.png">USE MY FACEBOOK ACCOUNT</a>
                            <a href="/pages/dashboard" class="gl-link btn"><img src="/images/gl_white.png">USE MY GOOGLE + ACCOUNT</a>
                            <p class="or">or</p>
                            <a class="email-form btn">USE MY EMAIL ADDRESS</a>
                            <div class="hide" style="display:none;">
                                <div class="contain">
                                    <span>FIRST NAME</span>
                                    <input type="text">
                                </div>
                                <div class="contain">
                                    <span>LAST NAME</span>
                                    <input type="text">
                                </div>
                                <div class="contain">
                                    <span>EMAIL ADDRESS</span>
                                    <input type="text">
                                </div>
                                <div class="contain">
                                    <span>PASSWORD</span>
                                    <input type="password">
                                </div>
                                <div class="contain">
                                    <a href="/pages/dashboard" class="btn">SIGN UP</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <% include ../partials/footer %>
    </div>
</body>

<script type="text/javascript" charset="utf-8">
    $(function() {
        $('.email-form').bind('click', function() {
            $('.hide').slideToggle(350);
        });
    });
</script>

</html>
